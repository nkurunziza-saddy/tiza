{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tiza",
  "version": "0.1.0",
  "identifier": "tiza",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build && pnpm run db:init",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tiza App",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/android-chrome-192x192.png",
      "icons/android-chrome-512x512.png",
      "icons/apple-touch-icon.png",
      "icons/icon.ico"
    ]
  }
}
